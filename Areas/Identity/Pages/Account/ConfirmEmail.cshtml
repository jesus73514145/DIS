@page
@model proyecto.Areas.Identity.Pages.Account.ConfirmEmailModel
@{
    ViewData["Title"] = "¡Gracias por confirmar su correo electrónico.!";
    Layout = null;
}

<head>
    <link rel="stylesheet" href="~/css/formularios.css" />
    <link rel="stylesheet" href="~/css/login.css" />
</head>

<div class="formulario">
    <form method="post">
        <div id="title">
            <h1>@ViewData["Title"]</h1>
        </div>
        <div class="imagen">
            <img src="~/images/ALZEN_logo.png" alt="Lo-code">
        </div>

        <div class="input">
            <!-- Enlace para volver al inicio de sesión -->
            <a asp-page="./Login">Volver al Login</a>
        </div>
    </form>
</div>

<style>
    .imagen{
        margin: 2rem;
    }
    .imagen img{
        border-radius: 2rem;
        width: 60%;
        height: 60%;
    }
    #confirm-link{
        font-size: 18px;
    }
</style>