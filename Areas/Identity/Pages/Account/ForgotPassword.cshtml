@page
@model proyecto.Areas.Identity.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "RECUPERAR CONTRASEÑA";
    Layout = null;
}

<head>
    <title>RECUPERAR CONTRASEÑA</title>
    <link rel="icon" href="~/images/ALZEN_logo.png" />
    <link rel="stylesheet" href="~/css/formularios.css" />
    <link rel="stylesheet" href="~/css/login.css" />
</head>

<body>
    <div class="formulario">
    <form method="post">
        <div id="title">
            <h1>@ViewData["Title"]</h1>
        </div>
        <h2>Ingresar el correo de la cuenta que quiere recuperar para enviar un enlace de recuperación</h2>
        <div class="inputBox">
            <div class="input" id="input-email">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"
                    placeholder="Correo Electrónico" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            </div>
        </div>
        <input type="submit" class="btnn2" value="CONFIRMAR"></input>

        <div class="input">
            <!-- Enlace para volver al inicio de sesión -->
            <a id="volver" asp-page="./Login">Volver al Login</a>
        </div>
    </form>
    <script src="/_framework/aspnetcore-browser-refresh.js"></script>
    </div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
