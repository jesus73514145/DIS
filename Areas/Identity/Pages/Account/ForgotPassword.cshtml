@page
@model proyecto.Areas.Identity.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "¿Olvidaste tu contraseña?";
    Layout = null;
}

<head>
    <title>¿Olvidaste tu contraseña?</title>
    <link rel="icon" href="~/images/locode.jpeg" />
    <link rel="stylesheet" href="~/css/formularios.css" />
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet" href="~/css/body.css" />
</head>

<div class="formulario">
    <form method="post">
        <div id="title">
            <h1>@ViewData["Title"]</h1>
        </div>
        <h2>Introduce tu correo electrónico.</h2>
        <hr id="line" />
        <div class="inputBox">
            <div class="input" id="input-email">
                <span>Email</span>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"
                    placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            </div>
        </div>
        <input type="submit" class="btn" value="Restablecer la contraseña"></input>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}