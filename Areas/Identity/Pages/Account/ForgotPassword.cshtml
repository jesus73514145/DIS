@page
@model proyecto.Areas.Identity.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "RECUPERAR CONTRASEÑA";
    Layout = null;
}

<head>
    <title>RECUPERAR CONTRASEÑA</title>
    <link rel="icon" href="~/images/locode.jpeg" />
    <link rel="stylesheet" href="~/css/formularios.css" />
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet" href="~/css/body.css" />
</head>

<div class="formulario">
    <form method="post">
        <div id="title">
            <h1>@ViewData["Title"]</h1>
        </div>
        <h2>Ingresar el correo de la cuenta para enviar el enlace de recuperación</h2>
        <hr id="line" />
        <div class="inputBox">
            <div class="input" id="input-email">
                <span>Correo</span>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"
                    placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            </div>
        </div>
        <input type="submit" class="btn" value="CONFIRMAR"></input>

        <div class="input">
            <!-- Enlace para volver al inicio de sesión -->
            <a asp-page="./Login">Volver al Login</a>
        </div>
    </form>

    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}