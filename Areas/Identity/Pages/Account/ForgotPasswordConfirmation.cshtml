@page
@model proyecto.Areas.Identity.Pages.Account.ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Correo de recuperación enviado";
    Layout = null;
}

<head>
    <title>Correo de recuperación enviado</title>
    <link rel="icon" href="~/images/ALZEN_logo.png" />
    <link rel="stylesheet" href="~/css/formularios.css" />
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body>
    <div class="formulario">
    <form method="post">
        <div id="title">
            <h1>@ViewData["Title"]</h1>
        </div>
        <h2>Por favor revise su correo electrónico para restablecer su contraseña.</h2>
        <div class="imagen">
            <img src="~/images/ALZEN_logo.png" alt="ALZEN">
        </div>
    </form>
</div>

<style>
    .imagen{
        margin: 2rem;
    }
    .imagen img{
        border-radius: 2rem;
        width: 60%;
        height: 60%;
    }
</style>
    <script src="/_framework/aspnetcore-browser-refresh.js"></script>
</body>

