@page
@model proyecto.Areas.Identity.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Cerrar sesión";
    Layout = null;
}

<header>
    <h1>@ViewData["Title"]</h1>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Click aqui para salir</button>
            </form>
        }
        else
        {
            <p>Ha cerrado sesión exitosamente en la aplicación.</p>
        }
    }

