@page
@model proyecto.Areas.Identity.Pages.Account.RegisterConfirmationModel
@{
    ViewData["Title"] = "Confirmación de registro";
    Layout = null;
}

<head>
    <title>Confirmación de registro</title>
    <link rel="icon" href="~/images/locode.jpeg" />
    <link rel="stylesheet" href="~/css/formularios.css" />
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet" href="~/css/body.css" />
</head>

<div class="formulario">
    <form method="post">
        <div id="title">
            <h1>@ViewData["Title"]</h1>
        </div>
        <h2>Por favor revise su correo electrónico para confirmar su cuenta.:</h2>
        <a id="confirm-link" href="@Model.EmailConfirmationUrl">Haga clic aquí para confirmar su cuenta</a>
        <div class="imagen">
            <img src="~/images/locode.jpeg" alt="Lo-code">
        </div>

        <div class="input">
            <!-- Enlace para volver al inicio de sesión -->
            <a asp-page="./Login">Volver al Login</a>
        </div>
    </form>
</div>

<style>
    .imagen{
        margin: 2rem;
    }
    .imagen img{
        border-radius: 2rem;
        width: 60%;
        height: 60%;
    }
    #confirm-link{
        font-size: 18px;
    }
</style>