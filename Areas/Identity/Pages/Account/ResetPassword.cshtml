@page
@model proyecto.Areas.Identity.Pages.Account.ResetPasswordModel
@{
    ViewData["Title"] = "Restablecer la contraseña";
    Layout = null;
}

<head>
    <title>Restablecer la contraseña</title>
    <link rel="icon" href="~/images/locode.jpeg" />
    <link rel="stylesheet" href="~/css/formularios.css" />
    <link rel="stylesheet" href="~/css/login.css" />
</head>

<body>
    <div class="formulario">
        <form method="post">
            <div id="title">
                <h1>@ViewData["Title"]</h1>
            </div>
            <h2>Restablecer su contraseña.</h2>
            <div class="text-danger" asp-validation-summary="ModelOnly" role="alert"></div>
            <input asp-for="Input.Code" type="hidden" />
            <div class="inputBox">
                <div class="input1">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Correo Electrónico" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="input2">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Contraseña" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            </div>

            <div class="inputBox">
                <div class="input">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirmar Contraseña" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <input type="submit" value="Reiniciar" class="btn3">

            <div class="input">
                <!-- Enlace para volver al inicio de sesión -->
                <a id="volver" asp-page="./Login">Volver al Login</a>
            </div>
        </form>
    </div>
    <script src="/_framework/aspnetcore-browser-refresh.js"></script>
</body>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
